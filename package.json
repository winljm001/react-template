{
  "name": "react-tslint-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "cross-env REACT_APP_CONFIG_ENV=prod react-app-rewired start",
    "build": "cross-env REACT_APP_CONFIG_ENV=prod react-app-rewired start",
    "dev": "cross-env REACT_APP_CONFIG_ENV=dev react-app-rewired start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint:ts": "tsc -p tsconfig.prod.json --noEmit && tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix --format verbose"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "dva": "^2.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "cross-env": "^5.2.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "node-sass": "^4.12.0",
    "pretty-quick": "^1.10.0",
    "react-app-rewired": "^2.1.3",
    "react-hot-loader": "^4.8.7",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "node_modules/*"
    ],
    "linters": {
      "*.{ts,tsx}": [
        "pretty-quick --staged",
        "npm run lint:ts",
        "git add"
      ]
    }
  }
}
