{
  "scripts": {
    "lint:ts": "tsc -p tsconfig.prod.json --noEmit && tslint -c tslint.json '@/**/*.{ts,tsx}' --fix --format verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env lint-staged"
    }
  },
  "lint-staged": {
    "ignore": ["node_modules/*"],
    "linters": {
      "*.{ts,tsx}": ["pretty-quick --staged", "npm run lint:ts", "git add"]
    }
  }
}
